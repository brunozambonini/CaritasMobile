    </LinearLayout>

    <TextView
        android:id="@+id/tvBairro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:id="@+id/tvTelefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp">
    </Space>
    
</LinearLayout>
